<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}PackTrack - Admin{% endblock %}</title>
    
    {# CSS du backoffice #}
    <link rel="stylesheet" href="{{ asset('css/back-style.css') }}">
    
    {# Font Awesome #}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    
    <style>
        /* Styles pour le sous-menu utilisateurs */
        .sidebar ul li.has-submenu {
            position: relative;
        }
        
        .sidebar ul li.has-submenu > a {
            display: flex;
            justify-content: space-between;
            align-items: center;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        
        .sidebar ul li.has-submenu > a:hover {
            padding-left: 25px;
        }
        
        .sidebar ul li.has-submenu .arrow {
            transition: transform 0.3s ease;
            font-size: 11px;
            opacity: 0.7;
        }
        
        .sidebar ul li.has-submenu.open .arrow {
            transform: rotate(180deg);
        }
        
        .submenu {
            max-height: 0;
            overflow: hidden;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            background: linear-gradient(to bottom, rgba(0, 0, 0, 0.15), rgba(0, 0, 0, 0.05));
            margin: 0;
            padding: 0;
            list-style: none;
            border-radius: 0 0 8px 8px;
            opacity: 0;
        }
        
        .sidebar ul li.has-submenu.open .submenu {
            max-height: 200px;
            opacity: 1;
            margin-top: 5px;
            padding: 8px 0;
        }
        
        .submenu li {
            margin: 0;
            padding: 0;
        }
        
        .submenu li a {
            padding: 12px 20px 12px 45px;
            font-size: 13.5px;
            display: flex;
            align-items: center;
            transition: all 0.2s ease;
            border-left: 3px solid transparent;
            position: relative;
        }
        
        .submenu li a::before {
            content: '';
            position: absolute;
            left: 28px;
            width: 4px;
            height: 4px;
            background: currentColor;
            border-radius: 50%;
            opacity: 0.5;
        }
        
        .submenu li a:hover {
            background: rgba(255, 255, 255, 0.1);
            padding-left: 50px;
            border-left-color: rgba(255, 255, 255, 0.5);
        }
        
        .submenu li a:hover::before {
            opacity: 1;
            transform: scale(1.3);
        }
        
        .submenu li.active a {
            background: rgba(255, 255, 255, 0.15);
            border-left-color: #fff;
            font-weight: 500;
        }
        
        .submenu li a i {
            font-size: 13px;
            margin-right: 10px;
            width: 16px;
            text-align: center;
            opacity: 0.8;
        }
        
        /* Animation d'entrÃ©e pour les Ã©lÃ©ments du sous-menu */
        .sidebar ul li.has-submenu.open .submenu li {
            animation: slideIn 0.3s ease forwards;
        }
        
        .sidebar ul li.has-submenu.open .submenu li:nth-child(1) {
            animation-delay: 0.05s;
        }
        
        .sidebar ul li.has-submenu.open .submenu li:nth-child(2) {
            animation-delay: 0.1s;
        }
        
        @keyframes slideIn {
            from {
                opacity: 0;
                transform: translateX(-10px);
            }
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }
    </style>
    
    {% block stylesheets %}{% endblock %}
</head>
<body>
    <div class="layout">
        {# SIDEBAR #}
        <aside class="sidebar">
            <h2>ðŸ“¦ PackTrack</h2>
            <ul>
                <li class="{{ app.request.get('_route') == 'admin_dashboard' ? 'active' }}">
                    <a href="{{ path('admin_dashboard') }}">
                        <i class="fa-solid fa-chart-line"></i> Dashboard
                    </a>
                </li>
                <li class="{{ app.request.get('_route') starts with 'admin_parcels' ? 'active' }}">
                    <a href="{{ path('admin_parcels') }}">
                        <i class="fa-solid fa-box"></i> Parcels
                    </a>
                </li>
                <li class="{{ app.request.get('_route') starts with 'admin_invoices' ? 'active' }}">
                    <a href="{{ path('admin_invoices') }}">
                        <i class="fa-solid fa-file-invoice"></i> Invoices
                    </a>
                </li>
                <li class="{{ app.request.get('_route') starts with 'admin_vehicles' ? 'active' }}">
                    <a href="{{ path('admin_vehicles') }}">
                        <i class="fa-solid fa-truck"></i> Vehicles
                    </a>
                </li>
                <li class="{{ app.request.get('_route') starts with 'admin_forum' ? 'active' }}">
                    <a href="{{ path('admin_forum') }}">
                        <i class="fa-solid fa-comments"></i> Forum
                    </a>
                </li>
                <li class="{{ app.request.get('_route') starts with 'admin_incidents' ? 'active' }}">
                    <a href="{{ path('admin_incidents') }}">
                        <i class="fa-solid fa-triangle-exclamation"></i> Incidents
                    </a>
                </li>
                <li class="has-submenu {{ app.request.get('_route') starts with 'app_utilisateurs' ? 'active open' : '' }}">
                    <a href="javascript:void(0);" onclick="toggleSubmenu(this)">
                        <span><i class="fa-solid fa-users"></i> Utilisateurs</span>
                        <i class="fa-solid fa-chevron-down arrow"></i>
                    </a>
                    <ul class="submenu">
                        <li class="{{ app.request.get('_route') == 'app_utilisateurs' ? 'active' }}">
                            <a href="{{ path('app_utilisateurs') }}">
                                <i class="fa-solid fa-list"></i> Liste des utilisateurs
                            </a>
                        </li>
                        <li class="{{ app.request.get('_route') == 'app_utilisateurs_new' ? 'active' }}">
                            <a href="{{ path('app_utilisateurs_new') }}">
                                <i class="fa-solid fa-user-plus"></i> Ajouter un utilisateur
                            </a>
                        </li>
                    </ul>
                </li>
            </ul>
        </aside>

        {# MAIN CONTENT #}
        <main class="main">
            {% block body %}{% endblock %}
        </main>
    </div>

    <script>
        function toggleSubmenu(element) {
            const parentLi = element.parentElement;
            parentLi.classList.toggle('open');
        }
    </script>

    {% block javascripts %}{% endblock %}
</body>
</html>
