                    {% if submitted and form.photoFile.vars.errors|length > 0 %}
                        <div class="invalid-feedback" style="display:flex">
                            <i class="fa-solid fa-circle-xmark"></i>
                            {{ form_errors(form.photoFile) }}
                        </div>
                    {% endif %}
                </div>

                {# ACTION BUTTONS #}
                <div class="form-actions">
                    <a href="{{ path('app_utilisateurs') }}" class="btn-modern btn-cancel">
                        <i class="fa-solid fa-xmark"></i>
                        Annuler
                    </a>
                    <button type="submit" class="btn-modern btn-submit">
                        <i class="fa-solid fa-check"></i>
                        Enregistrer les modifications
                    </button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
<script>
function onPhotoSelected(event) {
    const file = event.target.files[0];
    if (!file) return;
    if (file.size > 5 * 1024 * 1024) {
        alert('Image trop lourde. Maximum 5 Mo.');
        event.target.value = '';
        return;
    }
    const reader = new FileReader();
    reader.onload = e => {
        const img = document.getElementById('photo-preview-img');
        img.src = e.target.result;
        img.style.display = 'block';
        const icon = document.querySelector('#photo-circle .preview-icon');
        if (icon) icon.style.display = 'none';
        document.getElementById('photo-circle').classList.remove('current-photo');
        document.getElementById('photo-circle').classList.add('loaded');
        document.getElementById('photo-wrapper').classList.add('has-file');
        const nameEl = document.getElementById('photo-file-name');
        const labelEl = document.getElementById('photo-file-label');
        labelEl.textContent = file.name.length > 30 ? file.name.slice(0, 27) + '...' : file.name;
        nameEl.style.display = 'block';
        document.getElementById('photo-title').textContent = 'Nouvelle photo s√©lectionn√©e';
    };
    reader.readAsDataURL(file);
}
</script>
{% endblock %}
