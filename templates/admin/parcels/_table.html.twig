{% if colis_list|length > 0 %}
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Sender</th>
                <th>Recipient</th>
                <th>Status</th>
                <th>Destination</th>
                <th>Weight (kg)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for colis in colis_list %}
                <tr>
                    <td><i class="fa-solid fa-box"></i> #{{ colis.id }}</td>
                    <td>
                        {% if colis.expediteur %}
                            {{ colis.expediteur.prenom }} {{ colis.expediteur.nom }}
                        {% else %} - {% endif %}
                    </td>
                    <td>
                        {% if colis.destinataire %}
                            {{ colis.destinataire.prenom }} {{ colis.destinataire.nom }}
                        {% else %} - {% endif %}
                    </td>
                    <td>
                        {% set status = colis.statut %}
                        {% if status == 'en_attente' %}
                            <span class="status pending">â³ Pending</span>
                        {% elseif status == 'en_cours' %}
                            <span class="status transit">ğŸšš Transit</span>
                        {% elseif status == 'livre' %}
                            <span class="status delivered">âœ… Delivered</span>
                        {% else %}
                            <span class="status">{{ status }}</span>
                        {% endif %}
                    </td>
                    <td>{{ colis.adresseDestination|length > 30 ? colis.adresseDestination|slice(0, 30) ~ '...' : colis.adresseDestination }}</td>
                    <td>{{ colis.poids }} kg</td>
                    <td>
                        <a href="{{ path('admin_colis_show', {id: colis.id}) }}" class="btn-small">ğŸ‘ï¸</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% else %}
    <p class="empty-state">No parcels found.</p>
{% endif %}