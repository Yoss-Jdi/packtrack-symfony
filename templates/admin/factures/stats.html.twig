{% extends 'admin/base.html.twig' %}

{% block title %}Statistiques Factures{% endblock %}

{% block body %}

<style>
    .stats-wrapper {
        background: #f4f6fb;
        min-height: 100vh;
        padding: 30px;
        font-family: 'Segoe UI', sans-serif;
    }

    .stats-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }

    .stats-header h1 {
        font-size: 26px;
        font-weight: 700;
        color: #2d3748;
        margin: 0;
    }

    .btn-retour {
        padding: 10px 20px;
        background: #6c757d;
        color: white;
        text-decoration: none;
        border-radius: 8px;
        font-size: 14px;
    }

    .btn-retour:hover { background: #5a6268; color: white; }

    /* Cartes gradient */
    .card-gradient {
        border-radius: 16px;
        padding: 25px;
        color: white;
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        margin-bottom: 20px;
        text-align: center;
    }

    .card-gradient .icon { font-size: 36px; margin-bottom: 10px; opacity: 0.85; }
    .card-gradient .label { font-size: 12px; text-transform: uppercase; letter-spacing: 1px; margin-bottom: 8px; opacity: 0.9; }
    .card-gradient .value { font-size: 28px; font-weight: 700; }

    .g1 { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); }
    .g2 { background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); }
    .g3 { background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%); }
    .g4 { background: linear-gradient(135deg, #fa709a 0%, #fee140 100%); }

    /* Cartes blanches */
    .card-white {
        background: white;
        border-radius: 16px;
        padding: 25px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
        margin-bottom: 20px;
    }

    .card-white .card-title {
        font-size: 16px;
        font-weight: 700;
        color: #2d3748;
        margin-bottom: 20px;
        padding-bottom: 12px;
        border-bottom: 2px solid #f0f0f0;
    }

    /* Cartes temporelles */
    .card-temp {
        background: white;
        border-radius: 16px;
        padding: 20px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .card-temp .icon-circle {
        width: 55px;
        height: 55px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 22px;
        flex-shrink: 0;
    }

    .card-temp .label { font-size: 13px; color: #6c757d; margin-bottom: 4px; }
    .card-temp .value { font-size: 22px; font-weight: 700; color: #2d3748; }

    .progress-bar-custom {
        height: 6px;
        background: #e9ecef;
        border-radius: 10px;
        margin-top: 10px;
        overflow: hidden;
    }

    .progress-fill {
        height: 100%;
        border-radius: 10px;
        transition: width 0.5s ease;
    }

    /* Grilles */
    .grid-4 { display: grid; grid-template-columns: repeat(4, 1fr); gap: 20px; margin-bottom: 20px; }
    .grid-3 { display: grid; grid-template-columns: repeat(3, 1fr); gap: 20px; margin-bottom: 20px; }
    .grid-2 { display: grid; grid-template-columns: repeat(2, 1fr); gap: 20px; margin-bottom: 20px; }
    .grid-8-4 { display: grid; grid-template-columns: 2fr 1fr; gap: 20px; margin-bottom: 20px; }

    @media (max-width: 768px) {
        .grid-4, .grid-3, .grid-2, .grid-8-4 { grid-template-columns: 1fr; }
    }

    /* Table financi√®re */
    .fin-table { width: 100%; }
    .fin-table tr td { padding: 10px 0; color: #4a5568; font-size: 14px; border-bottom: 1px solid #f8f9fa; }
    .fin-table tr td:last-child { text-align: right; font-weight: 700; color: #2d3748; }
    .fin-table tr:last-child td { border-bottom: none; font-size: 18px; color: #198754; }

    /* Top clients */
    .client-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px 0;
        border-bottom: 1px solid #f8f9fa;
    }

    .client-item:last-child { border-bottom: none; }

    .client-avatar {
        width: 36px;
        height: 36px;
        border-radius: 50%;
        background: #f0ebff;
        color: #6f42c1;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        font-size: 14px;
        margin-right: 12px;
        flex-shrink: 0;
    }

    .client-name { font-weight: 600; color: #2d3748; font-size: 14px; }

    .badge-montant {
        background: #d1e7dd;
        color: #0f5132;
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
    }

    .taux-label {
        display: flex;
        justify-content: space-between;
        font-size: 13px;
        color: #4a5568;
        margin-bottom: 6px;
        margin-top: 15px;
    }
</style>

<div class="stats-wrapper">

    {# Header #}
    <div class="stats-header">
        <h1>üìä Statistiques des Factures</h1>
        <a href="{{ path('app_facture_index') }}" class="btn-retour">‚Üê Retour</a>
    </div>

    {# Cartes principales #}
    <div class="grid-4">
        <div class="card-gradient g1">
            <div class="icon">üßæ</div>
            <div class="label">Total Factures</div>
            <div class="value">{{ totalFactures }}</div>
        </div>
        <div class="card-gradient g2">
            <div class="icon">üí∞</div>
            <div class="label">Chiffre d'Affaires</div>
            <div class="value">{{ totalCA|number_format(2) }} DT</div>
        </div>
        <div class="card-gradient g3">
            <div class="icon">üìà</div>
            <div class="label">Facture Moyenne</div>
            <div class="value">{{ moyenne|number_format(2) }} DT</div>
        </div>
        <div class="card-gradient g4">
            <div class="icon">‚ö†Ô∏è</div>
            <div class="label">Impay√©es</div>
            <div class="value">{{ facturesImpayees }}</div>
        </div>
    </div>

    {# Cartes temporelles #}
    <div class="grid-3">
        <div class="card-temp">
            <div class="icon-circle" style="background:#e8f4fd;">üìÖ</div>
            <div style="flex:1;">
                <div class="label">Cette Semaine</div>
                <div class="value">{{ caSemaine|number_format(2) }} DT</div>
                <div class="progress-bar-custom">
                    <div class="progress-fill" style="width:{{ totalCA > 0 ? (caSemaine/totalCA*100)|number_format(0) : 0 }}%; background:#0d6efd;"></div>
                </div>
            </div>
        </div>
        <div class="card-temp">
            <div class="icon-circle" style="background:#e8f8f0;">üóìÔ∏è</div>
            <div style="flex:1;">
                <div class="label">Ce Mois</div>
                <div class="value">{{ caMois|number_format(2) }} DT</div>
                <div class="progress-bar-custom">
                    <div class="progress-fill" style="width:{{ totalCA > 0 ? (caMois/totalCA*100)|number_format(0) : 0 }}%; background:#198754;"></div>
                </div>
            </div>
        </div>
        <div class="card-temp">
            <div class="icon-circle" style="background:#fffbea;">üìÜ</div>
            <div style="flex:1;">
                <div class="label">Cette Ann√©e</div>
                <div class="value">{{ caAnnee|number_format(2) }} DT</div>
                <div class="progress-bar-custom">
                    <div class="progress-fill" style="width:100%; background:#ffc107;"></div>
                </div>
            </div>
        </div>
    </div>

    {# Graphiques #}
    <div class="grid-8-4">
        <div class="card-white">
            <div class="card-title">üìà √âvolution Mensuelle (12 derniers mois)</div>
            <canvas id="chartMensuel" height="80"></canvas>
        </div>
        <div class="card-white">
            <div class="card-title">üç© R√©partition Statuts</div>
            <canvas id="chartStatuts" height="200"></canvas>
        </div>
    </div>

    {# Analyse financi√®re + Top clients #}
    <div class="grid-2">
        <div class="card-white">
            <div class="card-title">üí≥ Analyse Financi√®re</div>
            <table class="fin-table">
                <tr>
                    <td>Total HT</td>
                    <td>{{ totalHT|number_format(2) }} DT</td>
                </tr>
                <tr>
                    <td>Total TVA (20%)</td>
                    <td style="color:#0d6efd;">{{ totalTVA|number_format(2) }} DT</td>
                </tr>
                <tr>
                    <td><strong>Total TTC</strong></td>
                    <td>{{ totalCA|number_format(2) }} DT</td>
                </tr>
            </table>
            <div class="taux-label">
                <span>Taux de paiement</span>
                <strong>{{ totalFactures > 0 ? ((facturesPayees/totalFactures)*100)|number_format(1) : 0 }}%</strong>
            </div>
            <div class="progress-bar-custom">
                <div class="progress-fill"
                     style="width:{{ totalFactures > 0 ? ((facturesPayees/totalFactures)*100)|number_format(0) : 0 }}%; background:#198754;">
                </div>
            </div>
        </div>

        <div class="card-white">
            <div class="card-title">üèÜ Top 5 Clients</div>
            {% if topClients is empty %}
                <p style="text-align:center; color:#6c757d; padding:20px;">Aucun client trouv√©</p>
            {% else %}
                {% for client, montant in topClients %}
                <div class="client-item">
                    <div style="display:flex; align-items:center;">
                        <div class="client-avatar">{{ client|slice(0,1)|upper }}</div>
                        <span class="client-name">{{ client }}</span>
                    </div>
                    <span class="badge-montant">{{ montant|number_format(2) }} DT</span>
                </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>

</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
<script>
// Graphique mensuel
const ctxMensuel = document.getElementById('chartMensuel').getContext('2d');
new Chart(ctxMensuel, {
    type: 'line',
    data: {
        labels: {{ graphiqueMensuel|keys|json_encode|raw }},
        datasets: [{
            label: "Chiffre d'Affaires (DT)",
            data: {{ graphiqueMensuel|json_encode|raw|replace({'{': '[', '}': ']'})|raw }},
            borderColor: '#667eea',
            backgroundColor: 'rgba(102, 126, 234, 0.1)',
            tension: 0.4,
            fill: true,
            borderWidth: 3,
            pointBackgroundColor: '#667eea',
            pointRadius: 5
        }]
    },
    options: {
        responsive: true,
        plugins: { legend: { display: false } },
        scales: {
            y: {
                beginAtZero: true,
                grid: { color: '#f0f0f0' },
                ticks: { callback: v => v.toFixed(0) + ' DT' }
            },
            x: { grid: { display: false } }
        }
    }
});

// Graphique statuts
const ctxStatuts = document.getElementById('chartStatuts').getContext('2d');
new Chart(ctxStatuts, {
    type: 'doughnut',
    data: {
        labels: ['Pay√©es', 'Impay√©es'],
        datasets: [{
            data: [{{ facturesPayees }}, {{ facturesImpayees }}],
            backgroundColor: ['#198754', '#dc3545'],
            borderWidth: 0,
            hoverOffset: 8
        }]
    },
    options: {
        responsive: true,
        plugins: {
            legend: { position: 'bottom', labels: { padding: 20, font: { size: 13 } } }
        },
        cutout: '70%'
    }
});
</script>

{% endblock %}