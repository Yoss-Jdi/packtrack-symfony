{% extends 'admin/base.html.twig' %}

{% block title %}Calendrier des Factures{% endblock %}

{% block body %}

<link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.10/index.global.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.10/index.global.min.js"></script>

<style>
    .calendar-wrapper {
        background: #f4f6fb;
        min-height: 100vh;
        padding: 30px;
        font-family: 'Segoe UI', sans-serif;
    }

    .calendar-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 25px;
    }

    .calendar-header h1 {
        font-size: 26px;
        font-weight: 700;
        color: #2d3748;
        margin: 0;
    }

    .btn-retour {
        padding: 10px 20px;
        background: #6c757d;
        color: white;
        text-decoration: none;
        border-radius: 8px;
        font-size: 14px;
        transition: background 0.2s;
    }

    .btn-retour:hover { background: #5a6268; color: white; }

    .legende {
        display: flex;
        gap: 20px;
        margin-bottom: 20px;
        flex-wrap: wrap;
    }

    .legende-item {
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 13px;
        color: #4a5568;
        background: white;
        padding: 6px 14px;
        border-radius: 20px;
        box-shadow: 0 1px 4px rgba(0,0,0,0.08);
    }

    .legende-dot {
        width: 12px;
        height: 12px;
        border-radius: 50%;
    }

    .calendar-card {
        background: white;
        border-radius: 16px;
        padding: 25px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
    }

    /* FullCalendar custom styles */
    .fc .fc-toolbar-title {
        font-size: 20px;
        font-weight: 700;
        color: #2d3748;
    }

    .fc .fc-button-primary {
        background: #6f42c1 !important;
        border-color: #6f42c1 !important;
        border-radius: 8px !important;
        font-size: 13px !important;
        padding: 6px 14px !important;
    }

    .fc .fc-button-primary:hover {
        background: #5a32a3 !important;
        border-color: #5a32a3 !important;
    }

    .fc .fc-button-primary:disabled {
        background: #9b72d0 !important;
        border-color: #9b72d0 !important;
    }

    .fc .fc-today-button {
        background: #0d6efd !important;
        border-color: #0d6efd !important;
    }

    .fc-daygrid-day.fc-day-today {
        background: #f0ebff !important;
    }

    .fc-event {
        border-radius: 6px !important;
        padding: 2px 6px !important;
        font-size: 12px !important;
        font-weight: 600 !important;
        border: none !important;
        cursor: pointer !important;
    }

    .fc-col-header-cell {
        background: #f8f9fa;
        padding: 10px !important;
        font-weight: 600;
        color: #4a5568;
    }

    .fc-daygrid-day-number {
        color: #2d3748;
        font-weight: 500;
    }

    /* Modal */
    .modal-overlay {
        display: none;
        position: fixed;
        top: 0; left: 0;
        width: 100%; height: 100%;
        background: rgba(0,0,0,0.5);
        z-index: 1000;
        justify-content: center;
        align-items: center;
    }

    .modal-overlay.active { display: flex; }

    .modal-box {
        background: white;
        border-radius: 16px;
        padding: 30px;
        width: 400px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.2);
        animation: slideIn 0.2s ease;
    }

    @keyframes slideIn {
        from { transform: translateY(-20px); opacity: 0; }
        to   { transform: translateY(0);     opacity: 1; }
    }

    .modal-title {
        font-size: 18px;
        font-weight: 700;
        color: #2d3748;
        margin-bottom: 20px;
        padding-bottom: 10px;
        border-bottom: 2px solid #f0f0f0;
    }

    .modal-row {
        display: flex;
        justify-content: space-between;
        padding: 8px 0;
        border-bottom: 1px solid #f8f9fa;
        font-size: 14px;
        color: #4a5568;
    }

    .modal-row strong { color: #2d3748; }

    .modal-actions {
        display: flex;
        gap: 10px;
        margin-top: 20px;
    }

    .btn-voir {
        flex: 1;
        padding: 10px;
        background: #0dcaf0;
        color: white;
        text-decoration: none;
        border-radius: 8px;
        text-align: center;
        font-size: 14px;
        font-weight: 600;
    }

    .btn-fermer {
        flex: 1;
        padding: 10px;
        background: #f8f9fa;
        color: #6c757d;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        font-size: 14px;
        font-weight: 600;
    }

    .statut-badge {
        padding: 3px 10px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
    }
</style>

<div class="calendar-wrapper">

    {# Header #}
    <div class="calendar-header">
        <h1>üìÖ Calendrier des Factures</h1>
        <a href="{{ path('app_facture_index') }}" class="btn-retour">‚Üê Retour √† la liste</a>
    </div>

    {# L√©gende #}
    <div class="legende">
        <div class="legende-item">
            <div class="legende-dot" style="background:#ffc107;"></div>
            √âmise
        </div>
        <div class="legende-item">
            <div class="legende-dot" style="background:#198754;"></div>
            Pay√©e
        </div>
        <div class="legende-item">
            <div class="legende-dot" style="background:#dc3545;"></div>
            Annul√©e
        </div>
    </div>

    {# Calendrier #}
    <div class="calendar-card">
        <div id="calendar"></div>
    </div>
</div>

{# Modal d√©tail facture #}
<div class="modal-overlay" id="modalOverlay">
    <div class="modal-box">
        <div class="modal-title">üìÑ D√©tail de la Facture</div>
        <div class="modal-row"><span>N¬∞ Facture</span><strong id="modalNumero"></strong></div>
        <div class="modal-row"><span>Date</span><strong id="modalDate"></strong></div>
        <div class="modal-row"><span>Montant TTC</span><strong id="modalMontant"></strong></div>
        <div class="modal-row">
            <span>Statut</span>
            <span id="modalStatut" class="statut-badge"></span>
        </div>
        <div class="modal-actions">
            <a href="#" id="modalLienVoir" class="btn-voir">üëÅÔ∏è Voir la facture</a>
            <button class="btn-fermer" onclick="fermerModal()">‚úï Fermer</button>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function () {
    const calendarEl = document.getElementById('calendar');

    const calendar = new FullCalendar.Calendar(calendarEl, {
        initialView: 'dayGridMonth',
        locale: 'fr',
        height: 'auto',
        headerToolbar: {
            left:   'prev,next today',
            center: 'title',
            right:  'dayGridMonth,dayGridWeek'
        },
        events: '{{ path('app_facture_calendar_events') }}',
        eventClick: function(info) {
            info.jsEvent.preventDefault();

            const props = info.event.extendedProps;

            document.getElementById('modalNumero').textContent  = info.event.title.split(' ‚Äî ')[0];
            document.getElementById('modalDate').textContent    = info.event.startStr;
            document.getElementById('modalMontant').textContent = info.event.title.split(' ‚Äî ')[1] || '';
            document.getElementById('modalLienVoir').href       = info.event.url;

            const statut  = props.statut || '';
            const badge   = document.getElementById('modalStatut');
            const colors  = {
                'payee':   { bg: '#d1e7dd', color: '#0f5132' },
                'emise':   { bg: '#fff3cd', color: '#664d03' },
                'annulee': { bg: '#f8d7da', color: '#842029' },
            };
            const c = colors[statut] || { bg: '#e2e3e5', color: '#41464b' };
            badge.textContent         = statut.charAt(0).toUpperCase() + statut.slice(1);
            badge.style.background    = c.bg;
            badge.style.color         = c.color;

            document.getElementById('modalOverlay').classList.add('active');
        }
    });

    calendar.render();
});

function fermerModal() {
    document.getElementById('modalOverlay').classList.remove('active');
}

// Fermer modal en cliquant dehors
document.getElementById('modalOverlay').addEventListener('click', function(e) {
    if (e.target === this) fermerModal();
});
</script>

{% endblock %}