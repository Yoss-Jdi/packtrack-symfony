            <p><strong>Distance :</strong> {{ facture.livraison.distanceKm ? facture.livraison.distanceKm ~ ' km' : 'N/A' }}</p>
            <p><strong>Statut :</strong> {{ facture.livraison.statut|capitalize }}</p>
        </div>
    </div>

    <!-- Items Table -->
    <table class="items-table">
        <thead>
            <tr>
                <th style="width: 60%;">Description</th>
                <th style="width: 20%;" class="text-right">QuantitÃ©</th>
