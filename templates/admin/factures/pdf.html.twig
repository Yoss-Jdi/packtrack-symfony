            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    <strong>Service de livraison - Colis #{{ facture.livraison.colis.id }}</strong><br>
                    <small style="color: #666;">
                        {{ facture.livraison.colis.description ?? 'Livraison standard' }}
                        {% if facture.livraison.colis.poids %}
                            <br>Poids: {{ facture.livraison.colis.poids }} kg
                        {% endif %}
                        {% if facture.livraison.colis.dimensions %}
                            <br>Dimensions: {{ facture.livraison.colis.dimensions }}
                        {% endif %}
                    </small>
                </td>
                <td class="text-right">1</td>
                <td class="text-right">{{ facture.montantHT|number_format(2, '.', ' ') }} DT</td>
            </tr>
        </tbody>
    </table>

    <!-- Totals -->
    <table class="totals">
        <tr>
            <td class="label">Sous-total HT :</td>
            <td class="amount">{{ facture.montantHT|number_format(2, '.', ' ') }} DT</td>
        </tr>
        <tr>
            <td class="label">TVA (20%) :</td>
            <td class="amount">{{ facture.tva|number_format(2, '.', ' ') }} DT</td>
        </tr>
        <tr class="total-row">
            <td class="label">TOTAL TTC :</td>
            <td class="amount">{{ facture.montantTTC|number_format(2, '.', ' ') }} DT</td>
