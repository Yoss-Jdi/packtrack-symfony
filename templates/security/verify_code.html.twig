<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vérification du code - PackTrack</title>
    
    {# Google Fonts #}
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    {# Font Awesome pour les icônes #}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
        }

        .verify-container {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 24px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
            width: 500px;
            max-width: 90%;
            padding: 50px 40px;
            animation: slideIn 0.5s ease-out;
        }

        @keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(-30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .logo-section {
            text-align: center;
            margin-bottom: 30px;
        }

        .logo-icon {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 20px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 15px;
            box-shadow: 0 10px 30px rgba(102, 126, 234, 0.4);
        }

        .logo-icon i {
            font-size: 40px;
            color: white;
        }

        .logo-section h1 {
            font-family: 'Poppins', sans-serif;
            font-size: 28px;
            font-weight: 700;
            color: #2d3748;
            margin-bottom: 5px;
        }

        .logo-section p {
            color: #718096;
            font-size: 14px;
        }

        .info-box {
            background: #f7fafc;
            border-left: 4px solid #667eea;
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 25px;
        }

        .info-box i {
            color: #667eea;
            margin-right: 10px;
        }

        .info-box p {
            color: #4a5568;
            font-size: 14px;
            line-height: 1.6;
            margin: 0;
        }

        .email-display {
            background: #e6f3ff;
            padding: 12px;
            border-radius: 8px;
            text-align: center;
            margin-bottom: 25px;
        }

        .email-display strong {
            color: #667eea;
            font-weight: 600;
        }

        .form-group {
            margin-bottom: 25px;
        }

        .form-group label {
            display: block;
            margin-bottom: 10px;
            color: #2d3748;
            font-weight: 500;
            font-size: 14px;
            text-align: center;
        }

        .code-input-wrapper {
            display: flex;
            justify-content: center;
            gap: 10px;
            margin-bottom: 20px;
        }

        .code-input {
            width: 60px;
            height: 70px;
            text-align: center;
            font-size: 32px;
            font-weight: 700;
            border: 2px solid #e2e8f0;
            border-radius: 12px;
            transition: all 0.3s ease;
            background: white;
            color: #2d3748;
        }

        .code-input:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
            transform: scale(1.05);
        }

        .code-input::-webkit-inner-spin-button,
        .code-input::-webkit-outer-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }

        .submit-btn {
            width: 100%;
            padding: 16px;
            border: none;
            border-radius: 12px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            margin-bottom: 15px;
        }

        .submit-btn:hover:not(:disabled) {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
        }

        .submit-btn:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }

        .resend-section {
            text-align: center;
            margin-top: 20px;
            padding-top: 20px;
            border-top: 1px solid #e2e8f0;
        }

        .resend-text {
            color: #718096;
            font-size: 14px;
            margin-bottom: 10px;
        }

        .resend-btn {
            background: transparent;
            border: 2px solid #667eea;
            color: #667eea;
            padding: 10px 20px;
            border-radius: 8px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .resend-btn:hover {
            background: #667eea;
            color: white;
        }

        .back-to-login {
            text-align: center;
            margin-top: 15px;
        }

        .back-to-login a {
            color: #667eea;
            text-decoration: none;
            font-weight: 500;
            display: inline-flex;
            align-items: center;
            gap: 5px;
            transition: all 0.3s ease;
            font-size: 14px;
        }

        .back-to-login a:hover {
            gap: 8px;
        }

        .alert {
            padding: 15px 20px;
            border-radius: 12px;
            margin-bottom: 20px;
            display: flex;
            align-items: start;
            gap: 10px;
        }

        .alert i {
            margin-top: 2px;
        }

        .alert-success {
            background: #f0fdf4;
            border: 1px solid #86efac;
            color: #166534;
        }

        .alert-error {
            background: #fef2f2;
            border: 1px solid #fca5a5;
            color: #991b1b;
        }

        .alert-success i {
            color: #22c55e;
        }

        .alert-error i {
            color: #ef4444;
        }

        .timer {
            text-align: center;
            color: #718096;
            font-size: 13px;
            margin-top: 10px;
        }

        .timer.warning {
            color: #f59e0b;
            font-weight: 600;
        }
    </style>
</head>
<body>
    <div class="verify-container">
        <div class="logo-section">
            <div class="logo-icon">
                <i class="fas fa-shield-halved"></i>
            </div>
            <h1>Vérification du code</h1>
            <p>Entrez le code à 6 chiffres</p>
        </div>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i>
                <span>{{ message }}</span>
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-error">
                <i class="fas fa-exclamation-circle"></i>
                <span>{{ message }}</span>
            </div>
        {% endfor %}

        <div class="info-box">
            <p>
                <i class="fas fa-envelope"></i>
                Un code de vérification à 6 chiffres a été envoyé à votre adresse email.
            </p>
        </div>

        <div class="email-display">
            <strong>{{ email }}</strong>
        </div>

        <form action="{{ path('app_verify_code_check') }}" method="post" id="verifyForm">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('verify_code') }}">
            <input type="hidden" name="code" id="fullCode">
            
            <div class="form-group">
                <label for="code1">Entrez le code reçu par email</label>
                <div class="code-input-wrapper">
                    <input type="number" class="code-input" id="code1" maxlength="1" min="0" max="9" required>
                    <input type="number" class="code-input" id="code2" maxlength="1" min="0" max="9" required>
                    <input type="number" class="code-input" id="code3" maxlength="1" min="0" max="9" required>
                    <input type="number" class="code-input" id="code4" maxlength="1" min="0" max="9" required>
                    <input type="number" class="code-input" id="code5" maxlength="1" min="0" max="9" required>
                    <input type="number" class="code-input" id="code6" maxlength="1" min="0" max="9" required>
                </div>
            </div>

            <div class="timer" id="timer">
                Le code expire dans <strong>15:00</strong>
            </div>

            <button type="submit" class="submit-btn" id="submitBtn">
                <i class="fas fa-check"></i> Vérifier le code
            </button>
        </form>

        <div class="resend-section">
            <p class="resend-text">Vous n'avez pas reçu le code ?</p>
            <form action="{{ path('app_resend_code') }}" method="post" style="display: inline;">
                <button type="submit" class="resend-btn">
                    <i class="fas fa-redo"></i> Renvoyer le code
                </button>
            </form>
        </div>

        <div class="back-to-login">
            <a href="{{ path('app_forgot_password') }}">
                <i class="fas fa-arrow-left"></i> Changer d'email
            </a>
        </div>
    </div>

    <script>
        // Gestion des inputs du code
        const codeInputs = document.querySelectorAll('.code-input');
        const fullCodeInput = document.getElementById('fullCode');
        const submitBtn = document.getElementById('submitBtn');

        codeInputs.forEach((input, index) => {
            // Auto-focus sur le prochain input
            input.addEventListener('input', (e) => {
                const value = e.target.value;
                
                // Limiter à 1 chiffre
                if (value.length > 1) {
                    e.target.value = value.slice(0, 1);
                }
                
                // Passer au champ suivant
                if (value.length === 1 && index < codeInputs.length - 1) {
                    codeInputs[index + 1].focus();
                }
                
                updateFullCode();
            });

            // Gestion du backspace
            input.addEventListener('keydown', (e) => {
                if (e.key === 'Backspace' && !e.target.value && index > 0) {
                    codeInputs[index - 1].focus();
                }
            });

            // Gestion du paste
            input.addEventListener('paste', (e) => {
                e.preventDefault();
                const pastedData = e.clipboardData.getData('text').trim();
                
                if (/^\d{6}$/.test(pastedData)) {
                    codeInputs.forEach((inp, i) => {
                        inp.value = pastedData[i];
                    });
                    codeInputs[5].focus();
                    updateFullCode();
                }
            });
        });

        function updateFullCode() {
            const code = Array.from(codeInputs).map(inp => inp.value).join('');
            fullCodeInput.value = code;
            
            // Activer/désactiver le bouton
            if (code.length === 6) {
                submitBtn.disabled = false;
            } else {
                submitBtn.disabled = true;
            }
        }

        // Timer de 15 minutes
        let timeLeft = 15 * 60; // 15 minutes en secondes
        const timerElement = document.getElementById('timer');

        function updateTimer() {
            const minutes = Math.floor(timeLeft / 60);
            const seconds = timeLeft % 60;
            const timeString = `${minutes}:${seconds.toString().padStart(2, '0')}`;
            
            timerElement.innerHTML = `Le code expire dans <strong>${timeString}</strong>`;
            
            if (timeLeft <= 60) {
                timerElement.classList.add('warning');
            }
            
            if (timeLeft <= 0) {
                timerElement.innerHTML = '<strong style="color: #ef4444;">Le code a expiré</strong>';
                submitBtn.disabled = true;
                codeInputs.forEach(input => input.disabled = true);
            } else {
                timeLeft--;
            }
        }

        // Mettre à jour le timer chaque seconde
        setInterval(updateTimer, 1000);
        updateTimer();

        // Auto-focus sur le premier input
        codeInputs[0].focus();

        // Animation de soumission
        document.getElementById('verifyForm').addEventListener('submit', function(e) {
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Vérification...';
            submitBtn.disabled = true;
        });
    </script>
</body>
</html>
