<script>
// ============================================================
// PHOTO UPLOAD INSCRIPTION
// ============================================================
function onRegisterPhotoSelected(event) {
    const file = event.target.files[0];
    if (!file) return;
    if (file.size > 5 * 1024 * 1024) { alert('Image trop lourde. Maximum 5 Mo.'); event.target.value = ''; return; }
    const reader = new FileReader();
    reader.onload = e => {
        const img = document.getElementById('photo-preview-img');
        img.src = e.target.result;
        img.style.display = 'block';
        document.querySelector('.photo-preview-circle .ph-icon').style.display = 'none';
        const nameEl = document.getElementById('photo-file-name');
        nameEl.textContent = file.name.length > 28 ? file.name.substring(0, 25) + '...' : file.name;
        nameEl.style.display = 'block';
    };
    reader.readAsDataURL(file);
}

// ============================================================
// FACE LOGIN
// ============================================================
let videoStream = null, faceDetectionInterval = null;
let pendingEmail = '', pendingPassword = '', pendingRemember = false;
let profilePhotoUrl = '', referenceDescriptor = null;
let modelsLoaded = false;
const SIMILARITY_THRESHOLD = 0.45;
const MODELS_URL = '/models';

async function startFaceLogin() {
    const email    = document.getElementById('login-email').value.trim();
    const password = document.getElementById('login-password').value;
    const remember = document.getElementById('remember_me_ui').checked;
    if (!email || !password) { showLoginError('Veuillez remplir tous les champs.'); return; }
    const btn = document.getElementById('btn-verify-credentials');
    btn.classList.add('loading'); btn.disabled = true; clearLoginError();
    try {
        const r = await fetch('{{ path("app_login_check_credentials") }}', {
            method: 'POST', headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ email, password })
        });
        const data = await r.json();
        if (!data.success) { showLoginError(data.error || 'Email ou mot de passe incorrect.'); return; }
        pendingEmail = email; pendingPassword = password; pendingRemember = remember;
        if (!data.hasPhoto) { window.location.href = '{{ path("app_setup_photo") }}'; return; }
        profilePhotoUrl = data.photoUrl;
        document.getElementById('ref-user-name').textContent = data.userName;
        openFaceModal();
    } catch { showLoginError('Erreur r√©seau. Veuillez r√©essayer.'); }
    finally { btn.classList.remove('loading'); btn.disabled = false; }
}

async function openFaceModal() {
    document.getElementById('face-modal-overlay').classList.add('active');
    resetFaceUI();
    if (!modelsLoaded) {
        setStatus('loading', 'Chargement des mod√®les IA...');
        await Promise.all([
            faceapi.nets.tinyFaceDetector.loadFromUri(MODELS_URL),
            faceapi.nets.faceLandmark68Net.loadFromUri(MODELS_URL),
            faceapi.nets.faceRecognitionNet.loadFromUri(MODELS_URL),
        ]);
        modelsLoaded = true;
    }
    setStatus('loading', 'Acc√®s √† la cam√©ra...');
    videoStream = await navigator.mediaDevices.getUserMedia({ video: { width: 640, height: 480, facingMode: 'user' } });
    const video = document.getElementById('webcam-video');
    video.srcObject = videoStream;
    await new Promise(r => video.onloadedmetadata = r);
    video.play();
    setStatus('loading', 'Chargement de la photo de r√©f√©rence...');
    const img = document.getElementById('ref-photo-img');
    img.src = profilePhotoUrl;
    await new Promise((res, rej) => { img.onload = res; img.onerror = rej; });
    document.getElementById('reference-photo-block').style.display = 'flex';
    const det = await faceapi.detectSingleFace(img, new faceapi.TinyFaceDetectorOptions()).withFaceLandmarks().withFaceDescriptor();
    if (!det) { setStatus('error', 'Aucun visage dans la photo de profil.'); return; }
    referenceDescriptor = det.descriptor;
    setStatus('scanning', 'Placez votre visage dans le cadre...');
    document.getElementById('webcam-hint').textContent = 'Regardez la cam√©ra';
    startFaceDetection();
}

function startFaceDetection() {
    const video = document.getElementById('webcam-video');
    const canvas = document.getElementById('face-canvas');
    faceDetectionInterval = setInterval(async () => {
        if (!referenceDescriptor || !video.videoWidth) return;
        canvas.width = video.videoWidth; canvas.height = video.videoHeight;
        const ctx = canvas.getContext('2d');
        ctx.clearRect(0, 0, canvas.width, canvas.height);
        const det = await faceapi.detectSingleFace(video, new faceapi.TinyFaceDetectorOptions({ inputSize: 320 })).withFaceLandmarks().withFaceDescriptor();
        if (!det) { setConfidence(0); document.getElementById('webcam-hint').textContent = 'Aucun visage d√©tect√©'; return; }
        const box = det.detection.box;
        ctx.strokeStyle = '#667eea'; ctx.lineWidth = 2;
        ctx.strokeRect(box.x, box.y, box.width, box.height);
        const dist = faceapi.euclideanDistance(referenceDescriptor, det.descriptor);
        const sim  = Math.max(0, Math.min(100, Math.round((1 - dist) * 100)));
        setConfidence(sim);
        document.getElementById('webcam-hint').textContent = `Similarit√© : ${sim}%`;
        if (dist <= SIMILARITY_THRESHOLD) onFaceMatched(sim);
    }, 800);
}

function onFaceMatched(sim) {
    clearInterval(faceDetectionInterval); faceDetectionInterval = null;
    setStatus('success', `Visage reconnu ! Connexion... (${sim}%)`);
    document.getElementById('ref-check-icon').className = 'ref-check matched';
    document.getElementById('ref-check-icon').innerHTML = '<i class="fas fa-check"></i>';
    document.getElementById('webcam-hint').textContent = '‚úì Identit√© v√©rifi√©e';
    stopWebcam();
    setTimeout(() => {
        document.getElementById('real-email').value    = pendingEmail;
        document.getElementById('real-password').value = pendingPassword;
        document.getElementById('real-remember').value = pendingRemember ? '1' : '';
        document.getElementById('real-login-form').submit();
    }, 1200);
}

async function retryFace() {
    document.getElementById('btn-retry').style.display = 'none';
    document.getElementById('ref-check-icon').className = 'ref-check pending';
    document.getElementById('ref-check-icon').innerHTML = '<i class="fas fa-clock"></i>';
    setConfidence(0); setStatus('scanning', 'Placez votre visage dans le cadre...');
    startFaceDetection();
}

function cancelFaceModal() {
    stopWebcam();
    if (faceDetectionInterval) { clearInterval(faceDetectionInterval); faceDetectionInterval = null; }
    document.getElementById('face-modal-overlay').classList.remove('active');
}

function stopWebcam() { if (videoStream) { videoStream.getTracks().forEach(t => t.stop()); videoStream = null; } }

function resetFaceUI() {
    setStatus('loading', 'Initialisation...'); setConfidence(0);
    document.getElementById('btn-retry').style.display = 'none';
    document.getElementById('reference-photo-block').style.display = 'none';
    document.getElementById('webcam-hint').textContent = 'Initialisation...';
    referenceDescriptor = null;
}

function setStatus(type, text) {
    const el = document.getElementById('face-status');
    el.className = 'face-status ' + type;
    const spin = (type === 'loading' || type === 'scanning') ? '<div class="spinner"></div>' : `<i class="fas fa-${type === 'success' ? 'check-circle' : 'times-circle'}"></i>`;
    el.innerHTML = `${spin}<span>${text}</span>`;
}

function setConfidence(pct) {
    document.getElementById('confidence-pct').textContent = pct + '%';
    const fill = document.getElementById('confidence-fill');
    fill.style.width = pct + '%';
    fill.style.background = pct >= 70 ? '#38a169' : pct >= 50 ? '#ed8936' : '#e53e3e';
}

function showLoginError(msg) { document.getElementById('login-error-msg').innerHTML = `<div class="alert alert-danger"><i class="fas fa-exclamation-circle"></i><span>${msg}</span></div>`; }
function clearLoginError() { document.getElementById('login-error-msg').innerHTML = ''; }

// TABS
function switchTab(f) {
    const l = document.getElementById('login-form-visible'), r = document.getElementById('register-form');
    const tabs = document.querySelectorAll('.tab-btn');
    if (f === 'login') { l.classList.add('active'); r.classList.remove('active'); tabs[0].classList.add('active'); tabs[1].classList.remove('active'); }
    else { r.classList.add('active'); l.classList.remove('active'); tabs[1].classList.add('active'); tabs[0].classList.remove('active'); }
}

function checkPasswordStrength(p) {
    const bar = document.getElementById('strength-bar'); let s = 0;
    if (p.length >= 6) s++; if (p.match(/[A-Z]/)) s++; if (p.match(/[0-9]/)) s++; if (p.match(/[^A-Za-z0-9]/)) s++;
    bar.className = 'password-strength-bar';
    if (s <= 1) bar.classList.add('weak'); else if (s <= 3) bar.classList.add('medium'); else bar.classList.add('strong');
}

