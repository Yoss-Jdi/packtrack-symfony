{% extends 'base.html.twig' %}

{% block title %}Mes Notifications - PackTrack{% endblock %}

{% block stylesheets %}
<style>
    .container {
        max-width: 900px;
        margin: 40px auto;
        padding: 20px;
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }

    .badge-count {
        background: #dc3545;
        color: white;
        padding: 6px 12px;
        border-radius: 20px;
        font-weight: 600;
        font-size: 12px;
    }

    .notifications-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        overflow: hidden;
    }

    .notifications-header {
        padding: 20px;
        background: #f8f9fa;
        border-bottom: 1px solid #dee2e6;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .notifications-header h2 {
        margin: 0;
        font-size: 20px;
        color: #212529;
    }

    .btn-mark-all {
        padding: 8px 16px;
        background: #007bff;
        color: white;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        font-size: 12px;
        font-weight: 600;
    }

    .btn-mark-all:hover {
        background: #0056b3;
    }

    .notification-item {
        padding: 16px 20px;
        border-bottom: 1px solid #f1f3f5;
        display: flex;
        gap: 12px;
        transition: background 0.2s;
    }

    .notification-item:last-child {
        border-bottom: none;
    }

    .notification-item:hover {
        background: #f8f9fa;
    }

    .notification-item.non-lu {
        background: #f0f7ff;
    }

    .notification-icon {
        font-size: 24px;
        flex-shrink: 0;
    }

    .notification-content {
        flex: 1;
    }

    .notification-message {
        color: #212529;
        margin: 0 0 6px 0;
        font-size: 14px;
        line-height: 1.5;
    }

    .notification-meta {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .notification-date {
        color: #6c757d;
        font-size: 12px;
    }

    .notification-type {
        display: inline-block;
        padding: 3px 8px;
        border-radius: 4px;
        font-size: 11px;
        font-weight: 600;
        text-transform: uppercase;
    }

    .notification-type.info {
        background: #d1ecf1;
        color: #0c5460;
    }

    .notification-type.success {
        background: #d4edda;
        color: #155724;
    }

    .notification-type.warning {
        background: #fff3cd;
        color: #856404;
    }

    .notification-type.danger {
        background: #f8d7da;
        color: #721c24;
    }

    .notification-actions {
        display: flex;
        gap: 8px;
        align-items: center;
    }

    .btn-small {
        padding: 6px 12px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 12px;
        text-decoration: none;
        display: inline-block;
    }

    .btn-mark-as-read {
        background: #e9ecef;
        color: #495057;
    }

    .btn-mark-as-read:hover {
        background: #dee2e6;
    }

    .btn-delete {
        background: #f8d7da;
        color: #721c24;
    }

    .btn-delete:hover {
        background: #f5c6cb;
    }

    .empty-state {
        padding: 60px 20px;
        text-align: center;
        color: #6c757d;
    }

    .empty-state h3 {
        color: #495057;
        margin-bottom: 10px;
    }

    .empty-icon {
        font-size: 48px;
        margin-bottom: 20px;
    }

    .alert {
        padding: 16px;
        border-radius: 8px;
        margin-bottom: 20px;
    }

    .alert-success {
        background: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }
</style>
{% endblock %}

{% block body %}
<div class="container">
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">‚úÖ {{ message }}</div>
    {% endfor %}

    <div class="page-header">
        <h1>üîî Mes Notifications</h1>
        {% if nbNonLues > 0 %}
            <span class="badge-count">{{ nbNonLues }} nouvelle{{ nbNonLues > 1 ? 's' : '' }}</span>
        {% endif %}
    </div>

    <div class="notifications-card">
        {% if notifications|length > 0 %}
            <div class="notifications-header">
                <h2>{{ notifications|length }} notification{{ notifications|length > 1 ? 's' : '' }}</h2>
                {% if nbNonLues > 0 %}
                    <form method="post" action="{{ path('app_notifications_mark_all_as_read') }}" style="display: inline;">
                        <button type="submit" class="btn-mark-all">
                            ‚úì Tout marquer comme lu
                        </button>
                    </form>
                {% endif %}
            </div>

            {% for notification in notifications %}
                <div class="notification-item {% if not notification.lu %}non-lu{% endif %}">
                    <div class="notification-icon">
                        {% if notification.type == 'success' %}
                            ‚úÖ
                        {% elseif notification.type == 'warning' %}
                            ‚ö†Ô∏è
                        {% elseif notification.type == 'danger' %}
                            ‚ùå
                        {% else %}
                            ‚ÑπÔ∏è
                        {% endif %}
                    </div>

                    <div class="notification-content">
                        <p class="notification-message">{{ notification.message }}</p>
                        <div class="notification-meta">
                            <div>
                                <span class="notification-type {{ notification.type }}">
                                    {{ notification.type }}
                                </span>
                                <span class="notification-date">
                                    {{ notification.dateCreation|date('d/m/Y H:i') }}
                                </span>
                            </div>
                        </div>
                    </div>

                    <div class="notification-actions">
                        {% if not notification.lu %}
                            <form method="post" action="{{ path('app_notification_mark_as_read', {id: notification.id}) }}" style="display: inline;">
                                <button type="submit" class="btn-small btn-mark-as-read" title="Marquer comme lue">
                                    Lire
                                </button>
                            </form>
                        {% endif %}
                        <form method="post" action="{{ path('app_notification_delete', {id: notification.id}) }}" style="display: inline;">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ notification.id) }}">
                            <button type="submit" class="btn-small btn-delete" title="Supprimer" onclick="return confirm('Supprimer cette notification ?')">
                                üóëÔ∏è
                            </button>
                        </form>
                    </div>
                </div>
            {% endfor %}
        {% else %}
            <div class="empty-state">
                <div class="empty-icon">üîî</div>
                <h3>Aucune notification</h3>
                <p>Vous n'avez actuellement aucune notification.</p>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
