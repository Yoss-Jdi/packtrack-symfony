{% extends 'base.html.twig' %}

{% block title %}Mes Colis - PackTrack{% endblock %}

{% block stylesheets %}
<style>
    .container {
        max-width: 1200px;
        margin: 40px auto;
        padding: 20px;
    }
    
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }
    
    .btn {
        padding: 12px 24px;
        background: #007bff;
        color: white;
        text-decoration: none;
        border-radius: 8px;
        font-weight: 600;
        transition: 0.3s;
    }
    
    .btn:hover {
        background: #0056b3;
    }
    
    .colis-table {
        width: 100%;
        background: white;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }
    
    .colis-table table {
        width: 100%;
        border-collapse: collapse;
    }
    
    .colis-table th {
        background: #f8f9fa;
        padding: 16px;
        text-align: left;
        font-weight: 600;
        color: #495057;
        border-bottom: 2px solid #dee2e6;
    }
    
    .colis-table td {
        padding: 16px;
        border-bottom: 1px solid #dee2e6;
    }
    
    .badge {
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
    }
    
    .badge.en_attente {
        background: #fff3cd;
        color: #856404;
    }
    
    .badge.en_cours {
        background: #d1ecf1;
        color: #0c5460;
    }
    
    .badge.livre {
        background: #d4edda;
        color: #155724;
    }
    
    .actions a {
        margin-right: 10px;
        color: #007bff;
        text-decoration: none;
    }
    
    .actions a:hover {
        text-decoration: underline;
    }
    
    .alert {
        padding: 16px;
        border-radius: 8px;
        margin-bottom: 20px;
    }
    
    .alert-success {
        background: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }

    .actions a {
    margin-right: 10px;
    color: #007bff;
    text-decoration: none;
    font-size: 18px;
    transition: transform 0.2s;
    display: inline-block;
    }

    .actions a:hover {
        transform: scale(1.2);
    }
</style>
{% endblock %}

{% block body %}
<div class="container">
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}

    <div class="page-header">
        <h1>üì¶ Mes Colis</h1>
        <a href="{{ path('app_colis_new') }}" class="btn">‚ûï Nouveau Colis</a>
    </div>

    <div class="colis-table">
        <table>
            <thead>
                <tr>
                    <th>#ID</th>
                    <th>Description</th>
                    <th>Destination</th>
                    <!--<th>Poids</th>-->
                    <th>Montant</th>           
                    <th>Date cr√©ation</th>
                    <th>Statut</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for item in colis %}
                <tr>
                    <td>#{{ item.id }}</td>
                    <td>{{ item.description|default('N/A') }}</td>
                    <td>{{ item.adresseDestination|slice(0, 50) }}...</td>
                    <!--<td>{{ item.poids ? item.poids ~ ' kg' : 'N/A' }}</td>-->
                    <td>
                        {% if item.poids %}
                            <strong style="color: #28a745; font-size: 16px;">{{ item.calculerMontant()|number_format(2, ',', ' ') }} ‚Ç¨</strong>
                        {% else %}
                            <span style="color: #6c757d;">-</span>
                        {% endif %}
                    </td>
                    <td>{{ item.dateCreation|date('d/m/Y H:i') }}</td> 
                    <td>
                        <span class="badge {{ item.statut }}">
                            {{ item.statut|replace({'_': ' '})|title }}
                        </span>
                    </td>
                    <td class="actions">
                        <a href="{{ path('app_colis_show', {id: item.id}) }}">üëÅÔ∏è</a>
                        {% if item.statut == 'en_attente' %}
                            <a href="{{ path('app_colis_edit', {id: item.id}) }}">‚úèÔ∏è</a>




                            <a href="#" 
                                onclick="event.preventDefault(); if(confirm('√ätes-vous s√ªr de vouloir supprimer ce colis ?')) { document.getElementById('delete-form-{{ item.id }}').submit(); }" 
                                title="Supprimer"
                                style="color: #dc3545; cursor: pointer;">üóëÔ∏è</a>
                                
                                <form id="delete-form-{{ item.id }}" 
                                    method="post" 
                                    action="{{ path('app_colis_delete', {id: item.id}) }}" 
                                    style="display: none;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ item.id) }}">
                                </form>
                        {% endif %}
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="8" style="text-align: center; padding: 40px; color: #6c757d;">
                        Aucun colis pour le moment. <a href="{{ path('app_colis_new') }}">Cr√©ez-en un !</a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}