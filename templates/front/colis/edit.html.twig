{% extends 'base.html.twig' %}

{% block title %}Modifier Colis #{{ colis.id }} - PackTrack{% endblock %}

{% block stylesheets %}
<style>
    .container {
        max-width: 800px;
        margin: 40px auto;
        padding: 20px;
    }
    
    .form-card {
        background: white;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }
    
    .form-group {
        margin-bottom: 24px;
    }
    
    .form-group label {
        display: block;
        margin-bottom: 8px;
        font-weight: 600;
        color: #495057;
    }
    
    .form-group input,
    .form-group textarea,
    .form-group select {
        width: 100%;
        padding: 12px;
        border: 1px solid #ced4da;
        border-radius: 8px;
        font-size: 14px;
        box-sizing: border-box;
    }

    .form-group input:focus,
    .form-group textarea:focus,
    .form-group select:focus {
        outline: none;
        border-color: #007bff;
        box-shadow: 0 0 0 3px rgba(0, 123, 255, 0.1);
    }
    
    .form-actions {
        display: flex;
        gap: 12px;
        margin-top: 32px;
    }
    
    .btn {
        padding: 12px 24px;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        text-decoration: none;
        display: inline-block;
    }
    
    .btn-primary { background: #007bff; color: white; }
    .btn-secondary { background: #6c757d; color: white; }
    .btn-danger { background: #dc3545; color: white; }

    .field-error {
        color: #dc3545;
        font-size: 12px;
        margin-top: 5px;
        display: block;
    }

    .field-help {
        color: #6c757d;
        display: block;
        margin-top: 5px;
        font-size: 12px;
    }

    .form-errors {
        background: #f8d7da;
        border: 1px solid #f5c6cb;
        color: #721c24;
        padding: 12px;
        border-radius: 8px;
        margin-bottom: 20px;
    }

    .form-errors strong {
        display: block;
        margin-bottom: 8px;
    }

    .form-errors ul {
        margin: 0;
        padding-left: 20px;
    }

    .form-errors li {
        margin-bottom: 4px;
    }
</style>
{% endblock %}

{% block body %}
<div class="container">
    <h1>‚úèÔ∏è Modifier Colis #{{ colis.id }}</h1>
    
    <div class="form-card">
        {% if form.vars.errors|length > 0 %}
            <div class="form-errors">
                <strong>‚ö†Ô∏è Erreurs de validation c√¥t√© serveur:</strong>
                <ul>
                    {% for error in form.vars.errors %}
                        <li>{{ error.message }}</li>
                    {% endfor %}
                </ul>
            </div>
        {% endif %}

        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
        
        <div class="form-group">
            {{ form_label(form.description) }}
            {{ form_widget(form.description) }}
            {% if form.description.vars.errors|length > 0 %}
                <div>
                    {% for error in form.description.vars.errors %}
                        <span class="field-error">{{ error.message }}</span>
                    {% endfor %}
                </div>
            {% endif %}
            {% if form.description.vars.help %}
                <span class="field-help">{{ form.description.vars.help }}</span>
            {% endif %}
        </div>
        
        <div class="form-group">
            {{ form_label(form.articles) }}
            {{ form_widget(form.articles) }}
            {% if form.articles.vars.errors|length > 0 %}
                <div>
                    {% for error in form.articles.vars.errors %}
                        <span class="field-error">{{ error.message }}</span>
                    {% endfor %}
                </div>
            {% endif %}
            {% if form.articles.vars.help %}
                <span class="field-help">{{ form.articles.vars.help }}</span>
            {% endif %}
        </div>
        
        <div class="form-group">
            {{ form_label(form.adresseDestination) }}
            {{ form_widget(form.adresseDestination) }}
            {% if form.adresseDestination.vars.errors|length > 0 %}
                <div>
                    {% for error in form.adresseDestination.vars.errors %}
                        <span class="field-error">{{ error.message }}</span>
                    {% endfor %}
                </div>
            {% endif %}
            {% if form.adresseDestination.vars.help %}
                <span class="field-help">{{ form.adresseDestination.vars.help }}</span>
            {% endif %}
        </div>
        
        <div class="form-group">
            {{ form_label(form.destinataire) }}
            {{ form_widget(form.destinataire) }}
            {% if form.destinataire.vars.errors|length > 0 %}
                <div>
                    {% for error in form.destinataire.vars.errors %}
                        <span class="field-error">{{ error.message }}</span>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
        
        <div class="form-group">
            {{ form_label(form.poids) }}
            {{ form_widget(form.poids) }}
            {% if form.poids.vars.errors|length > 0 %}
                <div>
                    {% for error in form.poids.vars.errors %}
                        <span class="field-error">{{ error.message }}</span>
                    {% endfor %}
                </div>
            {% endif %}
            {% if form.poids.vars.help %}
                <span class="field-help">{{ form.poids.vars.help }}</span>
            {% endif %}
        </div>
        
        <div class="form-group">
            {{ form_label(form.dimensions) }}
            {{ form_widget(form.dimensions) }}
            {% if form.dimensions.vars.errors|length > 0 %}
                <div>
                    {% for error in form.dimensions.vars.errors %}
                        <span class="field-error">{{ error.message }}</span>
                    {% endfor %}
                </div>
            {% endif %}
            {% if form.dimensions.vars.help %}
                <span class="field-help">{{ form.dimensions.vars.help }}</span>
            {% endif %}
        </div>
        
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">üíæ Enregistrer</button>
            <a href="{{ path('app_colis_index') }}" class="btn btn-secondary">‚ùå Annuler</a>
        </div>

        {{ form_end(form) }}

        <form method="post" action="{{ path('app_colis_delete', {id: colis.id}) }}" style="display: inline; margin-left:12px;" onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer ce colis ?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ colis.id) }}">
            <hr>
            <button type="submit" class="btn btn-danger">üóëÔ∏è Supprimer ce colis</button>
        </form>
    </div>
</div>
{% endblock %}